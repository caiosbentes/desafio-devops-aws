---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/proxy-body-size: "0"
  labels:
    app: comment-api
  name: comment-api
spec:
  rules:
  - host: comment-api.com.br
    http:
      paths:
      - backend:
          serviceName: comment-api
          servicePort: 5000
        path: /
